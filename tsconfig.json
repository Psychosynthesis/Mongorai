{
	"compileOnSave": true,
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
    "removeComments": true,
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["es6", "es2016", "es2017", "es2020"],
		"rootDir": ".",
		"baseUrl": ".",
		"outDir": "dist/",
		"moduleResolution": "node",
		"strict": false,
		"strictNullChecks": true,
		"esModuleInterop": true
	},
	"include": [ "routes/**/*", "lib/**/*", "middlewares/**/*", "server.ts", "cli.ts"],
	"exclude": [ "front/**/*", "node_modules" ]
}
